#
# bwm hotkey configuration
#

# terminal emulator
alt + Return
	foot

# launcher
alt + space
	rofi -show drun

# close window
alt + shift + q
	bmsg node --close

# toggle fullscreen
alt + f
	bmsg node --state fullscreen

# toggle floating
alt + shift + space
	bmsg node --state floating

# toggle monocle
alt + m
	bmsg desktop --layout monocle

# window navigation
alt + h
	bmsg focus west
alt + j
	bmsg focus south
alt + k
	bmsg focus north
alt + l
	bmsg focus east

# window swapping
alt + shift + h
	bmsg swap west
alt + shift + j
	bmsg swap south
alt + shift + k
	bmsg swap north
alt + shift + l
	bmsg swap east

# cancel preselection
alt + ctrl + space
	bmsg presel cancel

# rotate
alt + r
	bmsg rotate clockwise
alt + shift + r
	bmsg rotate counterclockwise

# flip
alt + comma
	bmsg flip horizontal
alt + period
	bmsg flip vertical

# resizing tiled windows
alt + ctrl + h
	bmsg resize left
alt + ctrl + j
	bmsg resize down
alt + ctrl + k
	bmsg resize up
alt + ctrl + l
	bmsg resize right

# desktop switching (1-based index)
alt + 1
	bmsg desktop 1
alt + 2
	bmsg desktop 2
alt + 3
	bmsg desktop 3
alt + 4
	bmsg desktop 4
alt + 5
	bmsg desktop 5
alt + 6
	bmsg desktop 6
alt + 7
	bmsg desktop 7
alt + 8
	bmsg desktop 8
alt + 9
	bmsg desktop 9
alt + 0
	bmsg desktop 10

# send to desktop (1-based index)
alt + shift + 1
	bmsg node --to-desktop 1
alt + shift + 2
	bmsg node --to-desktop 2
alt + shift + 3
	bmsg node --to-desktop 3
alt + shift + 4
	bmsg node --to-desktop 4
alt + shift + 5
	bmsg node --to-desktop 5
alt + shift + 6
	bmsg node --to-desktop 6
alt + shift + 7
	bmsg node --to-desktop 7
alt + shift + 8
	bmsg node --to-desktop 8
alt + shift + 9
	bmsg node --to-desktop 9
alt + shift + 0
	bmsg node --to-desktop 10

# send to next/prev desktop
alt + shift + Right
	bmsg send next
alt + shift + Left
	bmsg send prev

# quit
alt + alt + q
	bmsg quit

# Gesture bindings (touchpad)
gesture swipe:3:left
	bmsg desktop --focus prev
gesture swipe:3:right
	bmsg desktop --focus next
gesture pinch:in
	bmsg node --state fullscreen
gesture pinch:out
	bmsg node --state fullscreen

# Focus submap
# enter submap with alt + shift + f
alt + shift + f -> @focus

# focus with h j k l, exit with escape
@focus
  escape
    @exit
  h
    bmsg focus west
  j
    bmsg focus south
  k
    bmsg focus north
  l
    bmsg focus east
